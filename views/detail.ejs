<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ti-icons@0.1.2/css/themify-icons.css">
<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-md-7 col-lg-4 mb-5 mb-lg-0 wow fadeIn">
            <div class="card border-0 shadow">
                <img src="/img/cocktail_imgs/<%- cocktail.img %>" alt=<%- cocktail.name %>>
                <div class="card-body p-1-9 p-xl-5">
                    <div class="mb-4">
                        <h3 class="h4 mb-0"><%- cocktail.name %></h3>
                    </div>
                    <ul class="list-unstyled mb-4">
                        <li class="mb-3"><%- cocktail.overview %></li>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="ps-lg-1-6 ps-xl-5">
                <div class="mb-5 wow fadeIn">
                    <div class="text-start mb-1-6 wow fadeIn">
                        <h2 class="h1 mb-0 text-primary"><%- cocktail.name %></h2>
                    </div>
                </div>
                <div class="mb-5 wow fadeIn">
                    <div class="text-start mb-1-6 wow fadeIn">
                        <h2 class="mb-0 text-primary">Ingredients</h2> <br>
                    </div>
                    <div class="row mt-n4">
                        <div class="project-info-box">
                            <% cocktail.ingredients.forEach(function(ingredient, index) { %>
                                <% if (ingredient.amount != 0) { %>
                                    <p><b><%- ingredient.label %><%- ingredient.ingredient %> -</b> <%- ingredient.amount %> ml</p>
                                <% } else { %>
                                    <p><b><%- ingredient.ingredient %></b></p>
                                <% } %>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <div class="mb-5 wow fadeIn">
                    <div class="text-start mb-1-6 wow fadeIn">
                        <h2 class="mb-0 text-primary">Method</h2> <br>
                    </div>
                    <div class="row mt-n4">
                        <div class="project-info-box">
                            <p><%- cocktail.preparation %></p>
                        </div>
                    </div>
                </div>
                <div class="mb-5 wow fadeIn">
                    <div class="text-start mb-1-6 wow fadeIn">
                        <h2 class="mb-0 text-primary">Serving</h2> <br>
                    </div>
                    <div class="row mt-n4">
                        <div class="project-info-box">
                            <% if (cocktail.glass.chilled) { %>
                                <p>Serve in a chilled <%- cocktail.glass.name.replace(/\w/, c => c.toUpperCase()) %> glass.</p>
                            <% } else { %>
                                <p>Serve in a <%- cocktail.glass.name.replace(/\w/, c => c.toUpperCase()) %> glass.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% if (cocktail.garnish != "None") { %>
                    <div class="mb-5 wow fadeIn">
                        <div class="text-start mb-1-6 wow fadeIn">
                            <h2 class="mb-0 text-primary">Garnish</h2> <br>
                        </div>
                        <div class="row mt-n4">
                            <div class="project-info-box">
                                <p><%- cocktail.garnish%></p>
                            </div>
                        </div>
                    </div>
                <% } %>
                
            </div>
        </div>
    </div>
</div>