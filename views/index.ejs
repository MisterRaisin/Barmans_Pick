<section class="bg-light pb-5 shadow-sm">
    <div class="container">
      <div class="row pt-5">
        <div class="col-12">
          <h3 class="text-uppercase border-bottom mb-4">Displaying <%- cocktail_list.length %> Cocktails</h3>
        </div>
      </div>
      <div class="row">
        <% if (cocktail_list.length > 0) { %>    
            <% cocktail_list.forEach(function(cocktail, index) { %>
                <div class="col-lg-4 mb-3 d-flex align-items-stretch">
                <div class="card">
                    <a href="/<%- cocktail.name %>" style="color:inherit; text-decoration: none;">
                        <img src="/img/cocktail_imgs/<%- cocktail.img %>" width="360px" height="240px" class="card-img-top" alt=<%- cocktail.name %>/>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%- cocktail.name %></h5>
                            <p class="card-text mb-4"><%- cocktail.overview %></p>
                        </div>
                    </a>
                </div>
                </div>
            <% }) %>
        <% } else { %>
            <h2>No Cocktails Found</h2> 
        <% } %>
        </div>
    </div>
</section>

